<odoo>
        <record model="ir.ui.view" id="planta_form_view">
            <field name="name">planta.form</field>
            <field name="model">np.planta</field>
            <field name="arch" type="xml">
                <form string="planta Form">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="area.id"/>
                            <field name="nEspecies"/>
                            <field name="floracion"/>
                            <field name="pFloracion"/>
                            <field name="comestible"/>
                            <field name="animal.id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="planta_tree_view">
            <field name="name">planta.tree</field>
            <field name="model">np.planta</field>
            <field name="arch" type="xml">
                <tree string="planta Tree">
                    <field name="nombre"/>
                    <field name="area.id"/>
                    <field name="nEspecies"/>
                    <field name="floracion"/>
                    <field name="pFloracion"/>
                    <field name="comestible"/>
                    <field name="animal.id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="planta_graph_view">
            <field name="name">planta.graph</field>
            <field name="model">np.planta</field>
            <field name="arch" type="xml">
                <graph string="plantas">
                    <field name="name"/>
                    <field name="nEspecies" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="planta_list_action">
            <field name="name">planta</field>
            <field name="res_model">np.planta</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
            </field>
        </record>
        
        <menuitem id="planta_menu" name="planta"
            parent="np_menu"
            action="planta_list_action"/>

        <record model="ir.ui.view" id="animal_form_view">
            <field name="name">animal.form</field>
            <field name="model">np.animal</field>
            <field name="arch" type="xml">
                <form string="Animal Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="area.id"/>
                            <field name="nEspecies" options='{"type": "number", "step": 1}'/>
                            <field name="alimentacion"/>
                            <field name="tApareamiento"/>
                            <field name="comestible"/>
                            <field name="animal.id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="animal_tree_view">
            <field name="name">animal.tree</field>
            <field name="model">np.animal</field>
            <field name="arch" type="xml">
                <tree string="Animal Tree">
                    <field name="nombre"/>
                    <field name="area.id"/>
                    <field name="nEspecies"/>
                    <field name="alimentacion"/>
                    <field name="tApareamiento"/>
                    <field name="comestible"/>
                    <field name="animal.id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="animal_graph_view">
            <field name="name">animal.graph</field>
            <field name="model">np.animal</field>
            <field name="arch" type="xml">
                <graph string="Animals">
                    <field name="name"/>
                    <field name="nEspecies" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="animal_list_action">
            <field name="name">animal</field>
            <field name="res_model">np.animal</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="help" type="html">
            </field>
        </record>
        
        <menuitem id="animal_menu" name="animal"
            parent="np_menu"
            action="animal_list_action"/>

        <record model="ir.ui.view" id="mineral_form_view">
            <field name="name">mineral.form</field>
            <field name="model">np.mineral</field>
            <field name="arch" type="xml">
                <form string="Mineral Form">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="area.id"/>
                            <field name="tMineral"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="mineral_tree_view">
            <field name="name">mineral.tree</field>
            <field name="model">np.mineral</field>
            <field name="arch" type="xml">
                <tree string="Mineral Tree">
                    <field name="nombre"/>
                    <field name="area.id"/>
                    <field name="tMineral"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mineral_list_action">
            <field name="name">Mineral</field>
            <field name="res_model">np.mineral</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type="html">
            </field>
        </record>
        
        <menuitem id="mineral_menu" name="Mineral"
            parent="np_menu"
            action="mineral_list_action"/>

</odoo>