<odoo>

        <record model="ir.ui.view" id="area_form_view">
            <field name="name">area.form</field>
            <field name="model">np.area</field>
            <field name="arch" type="xml">
                <form string="Area Form">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="extension"/>
                            <field name="parquenatural.id"/>
                            <field name="comunidad.id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="area_tree_view">
            <field name="name">area.tree</field>
            <field name="model">np.area</field>
            <field name="arch" type="xml">
                <tree string="Area Tree">
                    <field name="nombre"/>
                    <field name="extension"/>
                    <field name="parquenatural.id"/>
                    <field name="comunidad.id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="area_graph_view">
            <field name="name">area.graph</field>
            <field name="model">np.area</field>
            <field name="arch" type="xml">
                <graph string="Areas">
                    <field name="nombre"/>
                    <field name="extension" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="area_list_action">
            <field name="name">Area</field>
            <field name="res_model">np.area</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html"></field>
        </record>

        <record model="ir.ui.view" id="area_search_view">
            <field name="name">area.search</field>
            <field name="model">np.area</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nombre"/>
                    <group string="Agrupacion">
                        <filter name="np" string="np"
                                context="{'group_by': 'parquenatural.id'}"/>
                    </group>
                </search>
            </field>
        </record>

        
        <menuitem id="area_menu" name="Area"
            parent="np_menu"
            action="area_list_action"/>

</odoo>