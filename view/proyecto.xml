<odoo>
    <record model="ir.ui.view" id="proyecto_form_view">
        <field name="name">proyecto.form</field>
        <field name="model">np.proyecto</field>
        <field name="arch" type="xml">
            <form string="proyecto Form">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="especies.id"/>
                        <field name="investigador.id"/>
                        <field name="presupesto"/>
                        <field name="DiaComienzo"/>
                        <field name="DiaFinal"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="proyecto_tree_view">
        <field name="name">proyecto.tree</field>
        <field name="model">np.proyecto</field>
        <field name="arch" type="xml">
        <field name="name"/>
                <field name="especies.id"/>
                <field name="investigador.id"/>
                <field name="presupesto"/>
                <field name="DiaComienzo"/>
                <field name="DiaFinal"/>
            </tree>
        </field>
    </record>


    <record model="ir.ui.view" id="proyecto_graph_view">
        <field name="name">proyecto.graph</field>
        <field name="model">np.proyecto</field>
        <field name="arch" type="xml">
            <graph string="proyectos">
                <field name="nombre"/>
                <field name="presupesto"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="proyecto_calendar_view">
        <field name="name">proyecto.calendar</field>
        <field name="model">np.proyecto</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de proyecto" date_start="DiaComienzo" date_stop="DiaFinal">
                <field name="nombres"/>
                <field name="especies.id"/>
            </calendar>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="proyecto_list_action">
        <field name="name">proyecto</field>
        <field name="res_model">np.proyecto</field>
        <field name="view_mode">tree,form,graph,calendar</field>
        <field name="help" type="html">
        </field>
    </record>

    <menuitem id="proyecto_menu" name="proyecto"
        parent="personal_menu"
        action="proyecto_list_action"/>
</odoo>